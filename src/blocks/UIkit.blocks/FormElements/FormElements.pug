        //- Rich Checkbox Buttons
        +FormElemContaner({title: "Rich Checkbox Buttons"}, "width-260", "mb-15")
          include /blocks/common.blocks/form.elements/rich-checkbox-buttons/rich-checkbox-buttons.pug
      .col-4.mt-md-4.mt-lg-0
        //- bullet list
        +FormElemContaner({title: "bullet list"}, "width-260", "mb-15")
